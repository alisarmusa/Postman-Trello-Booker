				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Get Booking code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"let response = pm.response.json();",
							"",
							"pm.test(\"First Name Control\", function(){",
							"    pm.expect(response.firstname).is.equal(pm.environment.get(\"firstname\"));",
							"});",
							"",
							"pm.test(\"Last Name Control\", function(){",
							"    pm.expect(response.lastname).is.equal(pm.environment.get(\"lastname\"));",
							"});",
							"",
							"pm.test(\"Total Price Control\", function(){",
							"    pm.expect(response.totalprice).is.equal(pm.environment.get(\"totalprice\"));",
							"});",
							"",
							"pm.test(\"Deposit paid Control\", function(){",
							"    pm.expect(response.depositpaid).is.equal(pm.environment.get(\"depositpaid\"));",
							"});",
							"",
							"pm.test(\"Checkin Control\", function(){",
							"    pm.expect(response.bookingdates.checkin).is.equal(pm.environment.get(\"checkin\"));",
							"});",
							"",
							"pm.test(\"Checkout Control\", function(){",
							"    pm.expect(response.bookingdates.checkout).is.equal(pm.environment.get(\"checkout\"));",
							"});",
							"",
							"pm.test(\"Additional Needs Control\", function(){",
							"    pm.expect(response.additionalneeds).is.equal(pm.environment.get(\"additionalneeds\"));",
							"});"
						],
